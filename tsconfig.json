{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@application/*": ["src/application/*"],
      "@domain/*": ["src/domain/*"],
      "@infra/*": ["src/infra/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  }
}
